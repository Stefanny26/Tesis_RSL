{
  "info": {
    "name": "Thesis RSL System API",
    "description": "Colección de endpoints para el sistema de revisión sistemática de literatura",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    },
    {
      "key": "projectId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.data.token);",
                  "    pm.collectionVariables.set('userId', response.data.user.id);",
                  "    pm.environment.set('token', response.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"usuario@example.com\",\n  \"fullName\": \"Usuario de Prueba\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.data.token);",
                  "    pm.collectionVariables.set('userId', response.data.user.id);",
                  "    pm.environment.set('token', response.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"usuario@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Projects",
      "item": [
        {
          "name": "List Projects",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/projects?limit=50&offset=0",
              "host": ["{{baseUrl}}"],
              "path": ["api", "projects"],
              "query": [
                {
                  "key": "limit",
                  "value": "50"
                },
                {
                  "key": "offset",
                  "value": "0"
                }
              ]
            }
          }
        },
        {
          "name": "Create Project",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('projectId', response.data.project.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Revisión Sistemática sobre IA en Educación\",\n  \"description\": \"Análisis del impacto de la inteligencia artificial en el aprendizaje\",\n  \"deadline\": \"2025-12-31\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/projects",
              "host": ["{{baseUrl}}"],
              "path": ["api", "projects"]
            }
          }
        },
        {
          "name": "Get Project by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/projects/{{projectId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "projects", "{{projectId}}"]
            }
          }
        },
        {
          "name": "Update Project",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"RSL sobre IA en Educación (Actualizado)\",\n  \"status\": \"En Progreso\",\n  \"description\": \"Descripción actualizada del proyecto\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/projects/{{projectId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "projects", "{{projectId}}"]
            }
          }
        },
        {
          "name": "Delete Project",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/projects/{{projectId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "projects", "{{projectId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Protocol",
      "item": [
        {
          "name": "Get Protocol",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/projects/{{projectId}}/protocol",
              "host": ["{{baseUrl}}"],
              "path": ["api", "projects", "{{projectId}}", "protocol"]
            }
          }
        },
        {
          "name": "Update Protocol - PICO Framework",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"population\": \"Estudiantes universitarios\",\n  \"intervention\": \"Uso de inteligencia artificial generativa\",\n  \"comparison\": \"Métodos de enseñanza tradicionales\",\n  \"outcomes\": \"Rendimiento académico y satisfacción del estudiante\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/projects/{{projectId}}/protocol",
              "host": ["{{baseUrl}}"],
              "path": ["api", "projects", "{{projectId}}", "protocol"]
            }
          }
        },
        {
          "name": "Update Protocol - Research Questions",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"researchQuestions\": [\n    \"¿Cómo impacta la IA generativa en el aprendizaje de estudiantes?\",\n    \"¿Qué beneficios pedagógicos aporta la IA?\",\n    \"¿Cuáles son las limitaciones y riesgos?\"\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/projects/{{projectId}}/protocol",
              "host": ["{{baseUrl}}"],
              "path": ["api", "projects", "{{projectId}}", "protocol"]
            }
          }
        },
        {
          "name": "Update Protocol - Criteria",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"inclusionCriteria\": [\n    \"Estudios publicados entre 2020-2025\",\n    \"Investigaciones en inglés o español\",\n    \"Estudios empíricos con estudiantes universitarios\"\n  ],\n  \"exclusionCriteria\": [\n    \"Estudios de opinión sin evidencia empírica\",\n    \"Artículos duplicados\",\n    \"Resúmenes de conferencias sin artículo completo\"\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/projects/{{projectId}}/protocol",
              "host": ["{{baseUrl}}"],
              "path": ["api", "projects", "{{projectId}}", "protocol"]
            }
          }
        },
        {
          "name": "Update Protocol - Search Strategy",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"databases\": [\"IEEE Xplore\", \"ACM Digital Library\", \"Scopus\", \"Web of Science\"],\n  \"searchString\": \"(\\\"artificial intelligence\\\" OR \\\"AI\\\" OR \\\"machine learning\\\") AND (education OR learning OR teaching) AND (students OR university)\",\n  \"dateRangeStart\": \"2020-01-01\",\n  \"dateRangeEnd\": \"2025-12-31\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/projects/{{projectId}}/protocol",
              "host": ["{{baseUrl}}"],
              "path": ["api", "projects", "{{projectId}}", "protocol"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    }
  ]
}
